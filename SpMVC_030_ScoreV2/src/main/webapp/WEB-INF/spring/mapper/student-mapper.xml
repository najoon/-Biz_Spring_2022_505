<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.callor.score.persistance.StudentDao">

	<select id="selectAll" resultType="StudentVO">
		SELECT * FROM tbl_student
	</select>
	
	<!-- 
	id : PK 칼럼
	property : VO클래스의 변수이름
	column : table 칼럼의 이름
	 -->
	<resultMap type="StudentVO" id="findByIdAndScore">
	<id property = "st_num" column="st_num"/>
	<collection property="scoreList" column="st_num" ofType="ScoreVO" select="findByIdScore">
	
	</collection>
	</resultMap>
	
	<resultMap type="StudentVO" id="Score">
	<id property = "st_num" column="st_num"/>
	<collection property="scoreList" column="st_num" ofType="ScoreVO" select="updateScore">
	
	</collection>
	</resultMap>
	
	<select id="findById" resultMap="findByIdAndScore">
		SELECT * FROM tbl_student WHERE st_num = #{st_num}
	</select>

	<select id="findByIdScore" resultType="ScoreVO">
		SELECT * FROM tbl_score
		LEFT JOIN tbl_subject
		ON sc_sbcode = sb_code
		WHERE sc_stnum = #{sc_stnum}
	</select>

	<insert id="insert" parameterType="StudentVO">
		INSERT INTO tbl_student (
		st_num,
		st_name,
		st_dept,
		st_grade,
		st_tel,
		st_addr
		) VALUES (
		#{st_num},
		#{st_name},
		#{st_dept},
		#{st_grade},
		#{st_tel},
		#{st_addr}
		)
	</insert>
	<update id="update">
		UPDATE tbl_student
		SET st_name = #{st_name},
		st_dept = #{st_dept},
		st_grade = #{st_grade},
		st_tel = #{st_tel},
		st_addr = #{st_addr}
		WHERE st_num =#{st_num}

	</update>
	<delete id="delete">
		DELETE FROM tbl_student
		WHERE st_num = #{st_num}
	</delete>

</mapper> 